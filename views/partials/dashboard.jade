			.col-xs-9.col-sm-12.col-md-3.col-lg-9
				img.img-thumbnail(ng-src='/images/interests/{{interest.type}}.png', ng-repeat='interest in event.interests | orderBy: "type"', tooltip='{{interest.type}}')
			.col-xs-9.col-sm-12.col-md-3.col-lg-12
				h4 Start Time {{event.startTimeDate | date:'medium'}}
			.col-xs-9.col-sm-12.col-md-3.col-lg-12
				h4 End Time {{event.endTimeDate | date:'medium'}}
			.col-xs-9.col-sm-12.col-md-3.col-lg-12
