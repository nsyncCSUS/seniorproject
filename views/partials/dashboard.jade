h1 Dashboard Page

div.upcomingEvents
	h2.text-center Upcoming Events
	.container-fluid
		.col-xs-12.col-sm-6.col-md-4.col-lg-4
			h3.text-center Group
		.col-xs-12.col-sm-2.col-md-1.col-lg-8
			h3.text-center Event Title {{event.name}}
		.col-xs-3.col-sm-12.col-md-3.col-lg-3
			img.img-responsive(src="//placehold.it/250x250")
