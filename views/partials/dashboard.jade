.row		
	.col-xs-12.col-sm-6.col-md-4.col-lg-8
		div.yourEvents
			h2.text-center Your Group Events
			.container-fluid
				.col-xs-12.col-sm-6.col-md-4.col-lg-4
					h3 Event Title
				.col-xs-4.col-sm-2.col-md-1.col-lg-4
					h3 Date
				.col-xs-4.col-sm-2.col-md-1.col-lg-4
					h3 Time
			.container-fluid(ng-repeat='e in event.yourGroupEvents')	<!--goes through the list contained in yourGroupEvents-->
				.col-xs-12.col-sm-6.col-md-4.col-lg-4
					h4 {{e.groupEventTitle}}
				.col-xs-4.col-sm-2.col-md-1.col-lg-4
					h4 {{e.date | date:'medium'}}
				.col-xs-4.col-sm-2.col-md-1.col-lg-4
					h4 {{e.time | date:'medium'}}
					
	.col-xs-12.col-sm-6.col-md-4.col-lg-4
		div.calendar

.row		
	.col-xs-12.col-sm-6.col-md-4.col-lg-8
		div.yourEvents
			h2.text-center Your Events
			.container-fluid
				.col-xs-12.col-sm-6.col-md-4.col-lg-4
					h3 Event Title
				.col-xs-4.col-sm-2.col-md-1.col-lg-4
					h3 Date {{event.yourEventsDate | date:'medium'}}
				.col-xs-4.col-sm-2.col-md-1.col-lg-4
					h3 Time {{event.yourEventsTime | date:'medium'}}
	.col-xs-12.col-sm-6.col-md-4.col-lg-4
		div.calendar
			h2 Calendar
			h3 Pick the day, and Your Events will display all events for this day.
	
			
