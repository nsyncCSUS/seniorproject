//HL 2 variables accessiable in the signupController scope user.username & user.password 
// using an object(user) to make it easier to pass the information otherwise you would
// have to pass user and password seperatly
html
	body
		h1 Login
		input(type='text', ng-model='user.username', placeholder='username')
		br
		input(type='password', ng-model='user.password', placeholder='password')
		br
		br
		button(ng-click='login()') Login


	form(method='post', action='/users/upload', enctype='multipart/form-data',ng-submit="submit()" )
		input(type='file', name='fileUploaded' , ng-model="filepic")
		input(type='submit')

	button(ng-click='testAuth()') test1
	button(ng-click='testAuth2()') test2
	br


	form(name='myForm')
		fieldset
			legend Upload on form submit
			br
			| Photo:
			input(type='file', ngf-select='', ng-model='picFile', name='file', accept='image/*', ngf-max-size='2MB')
			//i(ng-show='myForm.file.$error.required') *required
			br
			button(ng-click='picFile = null', ng-show='picFile') Remove
			br
			button(ng-disabled='!myForm.$valid', ng-click='upload(picFile)') Submit
			span.progress(ng-show='picFile.progress >= 0')
				div(style='width:{{picFile.progress}}%', ng-bind="picFile.progress + '%'")
			span(ng-show='picFile.result') Upload Successful
		br
